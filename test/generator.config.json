{
	"$schema": "../src/schema/generator.config.schema.json",
	"render": {
		"device": "GPU",
		"samples": 1
	},
	"scene": {
		"obstacleID": "Cube",
		"zeroCoordinate": [54,16,120],
		"sun": {}
	},
	"output": {
		"exportPath": "generator-output",
		"generateAlphaMaps": true
	},
	"sensors": [
		{
			"id": "zed_left",
			"type": "camera",
			"fov": 110,
			"parentBone": "branch2a"
		}
	],
	"bones": [
		{
			"id": "sensor_rig",
			"offset": {"x": 0, "y": -1.36, "z": 2.896},
			"children": [
				{
					"id": "os_sensor",
					"offset": {"x": 0, "y": 1.611, "z": 0.305}
				}
			]
		}
	],
	"animation": {
		"sourceMapping": [
			{
				"file": "gps.json",
				"values": [
					{
						"jsonPath": ["lat"],
						"assignedKey": "gps_latitude"
					},
					{
						"jsonPath": ["lon"],
						"assignedKey": "gps_longitude"
					}
				]
			},
			{
				"file": "zed_odom.json",
				"values": [
					{
						"jsonPath": ["pos", "x"],
						"assignedKey": "zed_pos_x"
					}
				]
			}
		],
		"calculatedValues": [
			{
				"key": "example",
				"expression": "lambda data, index: data['gps_latitude'][index] + data['gps_longitude'][index]"
			}
		],
		"boneMapping": [
			{
				"sourceKey": "gps_lat",
				"animationTarget": {
					"boneID": "root",
					"dataPath": "location",
					"dataIndex": 0
				}
			},
			{
				"sourceKey": "gps_lat",
				"animationTarget": {
					"boneID": "root",
					"dataPath": "location",
					"dataIndex": 1
				}
			}
		]
	},
	"animationMapping": [
		{
			"odomSource": ["pos", "x"],
			"animTarget": {
				"boneID": "branch1",
				"dataPath": "location",
				"dataIndex": 0
			}
		},
		{
			"odomSource": ["pos", "y"],
			"animTarget": {
				"boneID": "branch1",
				"dataPath": "location",
				"dataIndex": 1
			}
		},
		{
			"odomSource": ["pos", "z"],
			"animTarget": {
				"boneID": "branch1",
				"dataPath": "location",
				"dataIndex": 2
			}
		},
		{
			"odomSource": ["rot", "w"],
			"animTarget": {
				"boneID": "branch1",
				"dataPath": "rotation_quaternion",
				"dataIndex": 0
			}
		},
		{
			"odomSource": ["rot", "x"],
			"animTarget": {
				"boneID": "branch1",
				"dataPath": "rotation_quaternion",
				"dataIndex": 1
			}
		},
		{
			"odomSource": ["rot", "y"],
			"animTarget": {
				"boneID": "branch1",
				"dataPath": "rotation_quaternion",
				"dataIndex": 2
			}
		},
		{
			"odomSource": ["rot", "z"],
			"animTarget": {
				"boneID": "branch1",
				"dataPath": "rotation_quaternion",
				"dataIndex": 3
			}
		}
	]
}