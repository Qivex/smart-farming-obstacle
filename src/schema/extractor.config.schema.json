{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"required": ["recordingPath", "exportPath", "topics"],
	"properties": {
		"recordingPath": {
			"description": "Path to the recording from ROS",
			"type": "string"
		},
		"exportPath": {
			"description": "Path to exported artifacts (will be created)",
			"type": "string"
		},
		"startTime": {
			"description": "Skip messages before timestamp (seconds)",
			"type": "integer"
		},
		"endTime": {
			"description": "Skip messages after timestamp (seconds)",
			"type": "integer"
		},
		"topics": {
			"type": "array",
			"minLength": 1,
			"items": {
				"type": "object",
				"required": ["alias", "path", "schema"],
				"properties": {
					"alias": {
						"description": "Shortened identifier for each topic",
						"type": "string"
					},
					"path": {
						"description": "Full path name of topic in recording",
						"type": "string"
					},
					"schema": {
						"description": "Schema of this topic",
						"enum": [
							"nav_msgs/msg/Odometry",
							"novatel_oem7_msgs/msg/BESTPOS",
							"sensor_msgs/msg/CompressedImage",
							"sensor_msgs/msg/Imu",
							"sensor_msgs/msg/PointCloud2"
						]
					}
				}
			}
		}
	}
}